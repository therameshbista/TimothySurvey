<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_splash"
    tools:context=".activity.SplashScreen">

   <TextView
       android:id="@+id/timothy"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="310dp"
       android:textSize="23dp"
       android:textColor="#494e51"
       android:layout_marginLeft="90dp"
       android:text="timothy"/>
    <RelativeLayout
        android:id="@+id/logo"
        android:layout_marginTop="330dp"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="80dp">
        <ImageView
            android:id="@+id/sur"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/sur"/>
        <com.example.user.timothysurvey.activity.GIFView
            android:id="@+id/anim"
            android:layout_marginLeft="90dp"
            android:layout_width="90dp"
            android:adjustViewBounds="true"
            android:layout_height="60dp"
            components:src="@drawable/splash_tick" />
        <ImageView
            android:layout_width="63dp"
            android:layout_toRightOf="@+id/sur"
            android:layout_marginLeft="40dp"
            android:adjustViewBounds="true"
            android:layout_height="60dp"
            android:src="@mipmap/ey"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="170dp"
        android:padding="8dp"
        android:textColor="#42474b"
        android:text="Powered By : SoAni Tech"
        android:textSize="11dp" />

</RelativeLayout>
