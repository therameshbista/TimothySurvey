<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragment.Ongoing">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/surveyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#494e51"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Survey on: Leadership" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#858585"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="In order to take this survey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#858585"
        android:layout_gravity="center_horizontal"
        android:text="you should have been sent an invitation to your email"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#858585"
        android:layout_gravity="center_horizontal"
        android:text="address"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#e7ad01"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:text="PLEASE VERIFY YOUR EMAIL"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:textColor="#A7B0B8"
        android:singleLine="true"
        android:textSize="12dp"
        android:background="@drawable/background"
        android:hint="Enter your email"/>

    <Button
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="PROCEED"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:background="#e7ad01"/>
</LinearLayout>
